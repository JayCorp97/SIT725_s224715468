{
  "info": {
    "name": "Auth Endpoints",
    "description": "Postman collection for Recipe Management System authentication API. Use for manual and automated testing of auth reliability and security.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "testEmail", "value": "postman-test@example.com" },
    { "key": "testPassword", "value": "Test123!@#" }
  ],
  "item": [
    {
      "name": "Register",
      "item": [
        {
          "name": "Register - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201', () => pm.response.to.have.status(201));",
                  "pm.test('Response has token', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body).to.have.property('token');",
                  "  pm.expect(body).to.have.property('message', 'Registered successfully');",
                  "  if (body.token) pm.collectionVariables.set('token', body.token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"f_name\": \"Postman\",\n  \"l_name\": \"User\",\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\",\n  \"confirm_password\": \"{{testPassword}}\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Register - Duplicate Email (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 400', () => pm.response.to.have.status(400));",
                  "pm.test('Error code is VALIDATION_ERROR', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.error).to.have.property('code', 'VALIDATION_ERROR');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"f_name\": \"Postman\",\n  \"l_name\": \"User\",\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\",\n  \"confirm_password\": \"{{testPassword}}\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Register - Weak Password (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 400', () => pm.response.to.have.status(400));",
                  "pm.test('Error code is VALIDATION_ERROR', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.error).to.have.property('code', 'VALIDATION_ERROR');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"f_name\": \"Postman\",\n  \"l_name\": \"User\",\n  \"email\": \"weak@example.com\",\n  \"password\": \"weak\",\n  \"confirm_password\": \"weak\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        }
      ]
    },
    {
      "name": "Login",
      "item": [
        {
          "name": "Login - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Response has token', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body).to.have.property('token');",
                  "  if (body.token) pm.collectionVariables.set('token', body.token);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Login - Invalid Credentials (401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 401', () => pm.response.to.have.status(401));",
                  "pm.test('Error code is AUTH_ERROR', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.error).to.have.property('code', 'AUTH_ERROR');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nonexistent@example.com\",\n  \"password\": \"WrongPass123!\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        }
      ]
    },
    {
      "name": "OTP",
      "item": [
        {
          "name": "Request OTP - Success",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Message indicates OTP sent', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.include('OTP');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{testEmail}}\"\n}" },
            "url": "{{baseUrl}}/api/auth/request-otp"
          }
        },
        {
          "name": "Request OTP - User Not Found (404)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 404', () => pm.response.to.have.status(404));",
                  "pm.test('Error code is NOT_FOUND', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.error).to.have.property('code', 'NOT_FOUND');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"nonexistent@example.com\"\n}" },
            "url": "{{baseUrl}}/api/auth/request-otp"
          }
        }
      ]
    },
    {
      "name": "Me & Logout",
      "item": [
        {
          "name": "Get Me - With Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('User object has no password', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body).to.not.have.property('password');",
                  "  pm.expect(body).to.have.property('email');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/auth/me"
          }
        },
        {
          "name": "Get Me - No Token (401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 401', () => pm.response.to.have.status(401));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/me"
          }
        },
        {
          "name": "Logout - With Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Message indicates logged out', () => {",
                  "  const body = pm.response.json();",
                  "  pm.expect(body.message).to.include('Logged out');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/auth/logout"
          }
        },
        {
          "name": "Logout - No Token (401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 401', () => pm.response.to.have.status(401));"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/logout"
          }
        }
      ]
    }
  ]
}
